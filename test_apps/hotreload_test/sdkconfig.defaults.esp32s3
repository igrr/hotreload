# ESP32-S3 specific configuration

# Use USB Serial/JTAG for console (required for boards without UART bridge)
CONFIG_ESP_CONSOLE_USB_SERIAL_JTAG=y

# Enable PSRAM support
CONFIG_SPIRAM=y
CONFIG_SPIRAM_MODE_OCT=y
CONFIG_SPIRAM_SPEED_80M=y

# Allow allocating from PSRAM with heap_caps
CONFIG_SPIRAM_USE_CAPS_ALLOC=y

# Increase main task stack for test framework
CONFIG_ESP_MAIN_TASK_STACK_SIZE=8192
